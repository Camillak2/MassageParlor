<Page x:Class="MassageParlor.Pages.AdminMainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MassageParlor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMainMenuPage">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill"/>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="#AA000000" Opacity="0.9" Width="400" Margin="20">
            <TextBlock Text="Добро пожаловать, Главный Администратор" 
                       FontWeight="Bold" FontSize="24" Foreground="White" Margin="10" TextAlignment="Center" />

            <Button Content="Управление сотрудниками" Margin="10"/>
            <Button Content="Расписание массажей" Margin="10"/>
            <Button Content="Финансовая отчетность" Margin="10"/>
            <Button Content="Настройки салона" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
