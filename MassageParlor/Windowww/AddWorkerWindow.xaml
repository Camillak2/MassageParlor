<Window x:Class="MassageParlor.Windowww.AddWorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MassageParlor.Windowww"
        mc:Ignorable="d"
        Title="Golden Lotus" Height="800" Width="1200">
    <Grid Background="#a98f81">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1200"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">
                <StackPanel Orientation="Vertical"
                        Margin="20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                    <TextBlock Text="Фамилия:"
                            Margin="10"
                            FontSize="40"/>
                    <TextBlock Text="Имя:"
                            Margin="10"
                            FontSize="40"/>
                    <TextBlock Text="Отчество:"
                            Margin="10"
                            FontSize="40"/>
                    <TextBlock Text="Дата рождения:"
                            Margin="10"
                            FontSize="40"/>
                    <TextBlock Text="Телефон:"
                            Margin="10"
                            FontSize="40"/>
                    <TextBlock Text="Должность:"
                            Margin="10"
                            FontSize="40"/>
                    <TextBlock Text="Пол:"
                            Margin="10"
                            FontSize="40"/>
                    <TextBlock Text="Логин:"
                            Margin="10"
                            FontSize="40"/>
                    <TextBlock Text="Пароль:"
                            Margin="10"
                            FontSize="40"/>
                    <TextBlock Text="Паспорт:"
                            Margin="10"
                            FontSize="40"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                Margin="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                    <TextBox x:Name="SurnameTB"
                    Margin="10"
                    FontSize="40"
                    Width="400"
                    Height="50"
                    PreviewTextInput="TextBox_PreviewTextInput"/>
                    <TextBox x:Name="NameTB"
                    Margin="10"
                    FontSize="40"
                    Width="400"
                    Height="50"
                    PreviewTextInput="TextBox_PreviewTextInput"/>
                    <TextBox x:Name="PatronymicTB"
                    Margin="10"
                    FontSize="40"
                    Width="400"
                    Height="50"
                    PreviewTextInput="TextBox_PreviewTextInput"/>
                    <DatePicker x:Name="DateOfBirthDP"
                    Margin="10"
                    FontSize="40"
                    Width="400"
                    Height="50"
                    SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                    <TextBox x:Name="PhoneTB"
                    Margin="10"
                    FontSize="40"
                    Width="400"
                    Height="50"
                    PreviewTextInput="PhoneTextBox_PreviewTextInput" 
                    LostFocus="PhoneTextBox_LostFocus"/>
                    <ComboBox x:Name="PositionCB" Style="{StaticResource ComboboxStyle}"
                            Margin="10"
                            FontSize="40"
                            Width="400"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding positions}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox x:Name="GenderCB" Style="{StaticResource ComboboxStyle}"
                            Margin="10"
                            FontSize="40"
                            Width="400"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding genders}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBox x:Name="LoginTB"
                            Margin="10"
                            FontSize="40"
                            Width="400"
                            Height="50"/>
                    <TextBox x:Name="PasswordTB"
                            Margin="15"
                            FontSize="40"
                            Width="400"
                            Height="50"/>
                    <TextBox x:Name="PassportTB"
                            Margin="15"
                            FontSize="40"
                            Width="400"
                            Height="50"
                            LostFocus="PassportTB_LostFocus"
                            PreviewTextInput="PassportTextBox_PreviewTextInput"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="30 50 0 0"
                Height="680"
                Width="300">
                    <Border Style="{StaticResource BorderForPhoto}"
                    Width="250"
                    Height="350"
                    CornerRadius="10">
                        <Image Width="250"
                        Height="350"
                        x:Name="PhotoWorker"
                        Source="{Binding Photo}"
                        Stretch="UniformToFill"/>
                    </Border>
                    <Button x:Name="AddPhotoBTN"
                            Height="80"
                            Width="300"
                            Margin="0 30 0 0" Click="AddPhotoBTN_Click_1">
                        <TextBlock Text="Добавить"
                        FontSize="40"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Button x:Name="SaveBTN"
                Height="80"
                Width="300"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 46 80"
                Click="SaveBTN_Click">
            <TextBlock Text="Добавить"
            FontSize="40"/>
        </Button>
    </Grid>
</Window>
